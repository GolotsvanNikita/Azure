@model AzureP33.Models.Home.HomeIndexViewModel

@{
    ViewData["Title"] = "History";
}

<div class="container">
    <div class="text-center my-4">
        <h1 class="display-5">Translation History</h1>
        <a asp-action="Index" class="btn btn-outline-primary mt-2">Back to Translator</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (Model.History != null && Model.History.Count > 0)
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Time</th>
                        <th scope="col">Direction</th>
                        <th scope="col" class="w-25">Original</th>
                        <th scope="col" class="w-25">Translation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.History)
                    {
                        <tr>
                            <td class="text-secondary small">
                                @item.CreatedAt.ToLocalTime().ToString("g")
                            </td>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-secondary">@item.FromLang</span>
                                    <i class="bi bi-arrow-right text-muted"></i>
                                    <span class="badge bg-primary">@item.ToLang</span>
                                </div>
                            </td>
                            <td>
                                <div class="chang-col">@item.OriginalText</div>
                                @if (item.FromTransliteration != null)
                                {
                                    <small class="text-muted d-block border-top mt-1 pt-1">
                                        <i class="bi bi-fonts"></i> <em>@item.FromTransliteration.Text</em>
                                        <span class="badge rounded-pill bg-light text-dark border">@item.FromTransliteration.Script</span>
                                    </small>
                                }
                            </td>
                            <td>
                                <div class="fw-bold text-success">@item.TranslatedText</div>
                                @if (item.ToTransliteration != null)
                                {
                                    <small class="text-primary d-block border-top mt-1 pt-1">
                                        <i class="bi bi-fonts"></i> <em>@item.ToTransliteration.Text</em>
                                        <span class="badge rounded-pill bg-light text-dark border">@item.ToTransliteration.Script</span>
                                    </small>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-clock-history display-1"></i>
            <p class="mt-3 fs-5">History is not yet.</p>
        </div>
    }
</div>